@page "{id:Guid}"
@model MajorSelection.Pages.Admin.Majors.EditModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">
    <div class="container">
        <h1>Edit Major</h1>
    </div>
</div>

<partial name="_Notification">

    @if (Model.Major != null)
    {
        <div>
            <div class="container">
                <form method="post">
                    <div class="mb-3">
                        <label for="Id" class="form-label">Id</label>
                        <input type="text" class="form-control" id="id" asp-for="Major.Id" readonly required>
                        <span class="text-danger" asp-validation-for="Major.Id"></span>
                    </div>

                    <div class="mb-3">
                        <label for="serialNumber" class="form-label">Serial Number</label>
                        <input type="number" class="form-control" id="serialNumber" asp-for="Major.SerialNumber" required>
                        <span class="text-danger" asp-validation-for="Major.SerialNumber"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" asp-for="Major.Name" required>
                        <span class="text-danger" asp-validation-for="Major.Name"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label for="UniversityName" class="form-label">University Name</label>
                        <input type="text" class="form-control" id="UniversityName" asp-for="Major.UniversityName" required>
                        <span class="text-danger" asp-validation-for="Major.UniversityName"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Capacity" class="form-label">Capacity</label>
                        <input type="number" class="form-control" id="Capacity" asp-for="Major.Capacity" required>
                        <span class="text-danger" asp-validation-for="Major.Capacity"></span>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Sex</label>
                        </div>
                        <select class="custom-select" id="inputGroupSelect01" asp-for="Major.Sex" required>
                            @{
                                int i = 0;
                                foreach (var sex in Enum.GetValues(typeof(MajorSelection.Enums.MajorSex)))
                                {
                                    <option value="@i">@sex</option>
                                    i++;
                                }
                            }
                        </select>
                        <span class="text-danger" asp-validation-for="Major.Sex"></span>
                    </div>

                    <div class="mb-3">
                        <label for="placeOfDuty" class="form-label">Place Of Duty</label>
                        <input type="text" class="form-control" id="placeOfDuty" asp-for="Major.PlaceOfDuty" required>
                        <span class="text-danger" asp-validation-for="Major.PlaceOfDuty"></span>
                    </div>

                    <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="status">Status</label>
                    </div>
                    <select class="custom-select" id="status" asp-for="Major.Status">
                        @{
                            int j = 0;
                            foreach (var status in Enum.GetValues(typeof(MajorSelection.Enums.MajorStatus)))
                            {
                                <option value="@j">@status</option>
                                j++;
                            }
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="Major.Status"></span>
                </div>

                    <div class="mb-3 d-flex justify-content-between">
                        <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>

                        <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Delete</button>
                    </div>

                </form>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <p>Major Post Not Found!</p>
        </div>
    }